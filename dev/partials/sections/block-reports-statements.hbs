<div class="block-reports-statements js-reports-statements">
  <div class="block-reports-statements__wrap">
    <div class="block-reports-statements__select">
      <label class="b-career-form__field js-nice-select-wrap">
        <select name="year" id="" class="nice-select js-b-input__field js-nice-select">
          {{#each years}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </label>
    </div>
    <div class="block-reports-statements__toggle">
      {{#each categories}}
        <label class="block-reports-statements__toggle__item">
          <input type="radio" name="category" class="js-category-input" value="{{value}}" {{#if checked}} checked{{/if}}>
          <div class="block-reports-statements__toggle__item__label">{{label}}</div>
        </label>
      {{/each}}
    </div>
    <div class="block-reports-statements__content js-content-wrap">
      {{#each yearsContent}}
        <div class="block-reports-statements__content__page js-page-wrap{{#if isActive}} active{{/if}}" data-year="{{year}}" data-category="{{category}}">
          {{#each list}}
            <a href="{{doc}}" class="block-reports-statements__content__page__item" download="">
              <div class="block-reports-statements__content__page__item__icon">
                {{{ getImg src="reports/reports-file.png" }}}
              </div>
              <div class="block-reports-statements__content__page__item__text">
                <div class="block-reports-statements__content__page__item__title">{{{title}}}</div>
                <div class="block-reports-statements__content__page__item__descr">{{descr}}</div>
              </div>
              <div class="block-reports-statements__content__page__item__type">
                {{{ getSvg src="icons/download-blue" }}}
                PDF
              </div>
              <div class="block-reports-statements__content__page__item__arrow">
                {{{getSvg src="arrow-reports"}}}
              </div>
            </a>
          {{/each}}
        </div>

      {{/each}}
    </div>
  </div>
</div>