<div class="b-block-clusters">
    <div class="b-block-clusters__wrap">
        {{#each list}}
            <a href="{{href}}" class="b-block-clusters__item">
                <div class="b-block-clusters__item__label">{{label}}</div>
                <div class="b-block-clusters__item__descr">{{descr}}</div>
                <div class="b-block-clusters__item__link">
                    <span class="b-block-clusters__item__link-text">
                        Вакансии
                    </span>
                    {{{getSvg src="arrow-link-black"}}}
                </div>
            </a>
        {{/each}}
    </div>
</div>