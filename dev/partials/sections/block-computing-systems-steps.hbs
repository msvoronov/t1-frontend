<div class="b-block-computing-systems-steps">
  <div class="b-block-computing-systems-steps__wrap">
    {{#each list}}
    <div class="b-block-computing-systems-steps__item">
      <div class="b-block-computing-systems-steps__item__img">{{{getSvg src=img}}}</div>
      <div class="b-block-computing-systems-steps__item__label">{{label}}</div>
          <div class="b-block-computing-systems-steps__item__descr">{{{descr}}}</div>
    </div>
    {{/each}}
  </div>
  {{#if link}}
  <a href="{{link.href}}" class="section__link section__link--mob">
    {{link.label}}
    {{{getSvg src="arrow-link"}}}
  </a>
  {{/if}}
</div>