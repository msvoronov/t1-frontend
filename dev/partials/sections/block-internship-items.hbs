<div class="b-block-internship-items{{#if classNames}} {{classNames}}{{/if}}">
    <div class="b-block-internship-items__wrap">
        {{#each list}}
            <a href="" class="b-block-internship-items__item">
                <div class="b-block-internship-items__item__img">
                    {{{getImg src=img}}}
                </div>
                <div class="b-block-internship-items__item__label">{{label}}</div>
                <div class="b-block-internship-items__item__descr">{{descr}}</div>
            </a>
        {{/each}}
    </div>
</div>