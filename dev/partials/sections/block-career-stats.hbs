<div class="b-block-career-stats">
    <div class="b-block-career-stats__wrap{{#if classNameWrap}} {{classNameWrap}}{{/if}}">
        {{#each list}}
            <div class="b-block-career-stats__item">
                <div class="b-block-career-stats__item__value-wrap">
                    <span class="b-block-career-stats__item__value">{{value}}</span>
                    {{#if hasPlus}}
                        <span class="b-block-career-stats__item__value b-block-career-stats__item__value--blue">+</span>
                    {{/if}}
                </div>
                <div class="b-block-career-stats__item__label">{{label}}</div>
            </div>
        {{/each}}
    </div>
    {{#if source}}
        <span class="b-block-career-stats__copyright">{{source}}</span>
    {{/if}}
</div>