{{#> layouts/main title='Int1ra' titleValue="Int1ra" }}
  {{> sections/block-intra-content}}
  
  <div class="b-block-career-form b-block-career-form-new b-block-career-form-debut" id="form">
    <div class="b-block-career-form__wrap js-b-form">
      <div class="b-block-career-form-new__title-wrap">
  
        <div class="b-block-career-form-new__title">Хочу получать информацию о новых мероприятиях</div>
      </div>
      <form action="" class="b-block-career-form__form b-career-form form js-b-form__form js-form-validate">
        <input class="js-url-query" type="hidden" name="url_query">
        <div class="b-block-career-form__inputs-wrap js-b-form-inputs active">

          <div class="b-career-form__row">  
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Email<span class="required">*</span></span>
              <input type="email" name="email" id="" class="b-career-form__field__input js-b-input__field" data-required data-email>
              <span class="alert-input-text"></span>
            </label>
          </div>    
          
  
          <label class="b-career-form__checkbox">
            <input type="checkbox" name="advert" id="" class="b-career-form__checkbox__input js-b-input__field"
              data-required>
            <span class="b-career-form__checkbox__holder"></span>
            <span class="b-career-form__checkbox__label">Нажимая «Отправить», вы соглашаетесь на<a href="https://t1.ru/documents/Agreement_performation_marketing_v-1-0.pdf" class="b-career-form__checkbox__link">получение рекламы и обработку персональных данных</a>.</span>
            <span class="alert-input-text"></span>
          </label>
  
          <button type="submit" class="b-career-form__btn btn-white js-b-form-submit">Отправить</button>
  
        </div>
        <div class="b-block-career-form__response-success js-b-form-success">
          {{{getImg src="form/success-img.png"}}}
          <span class="b-block-career-form__response-msg">Спасибо!</span>
        </div>
        <div class="b-block-career-form__response-error js-b-form-error">
          {{{getImg src="form/back.png"}}}
          <span class="b-block-career-form__response-msg">Не удалось отправить форму.</span>
          <div class="b-block-career-form__back js-b-form-back">Попробовать еще раз</div>
        </div>
        <div class="b-block-career-form__loader js-b-form-loader">
          {{{getImg src="form/loader.png"}}}
        </div>
      </form>
    </div>
  </div>

  <div class="b-block-career-form b-block-career-form-new b-block-career-form-debut" id="form">
    <div class="b-block-career-form__wrap js-b-form">
      <div class="b-block-career-form-new__title-wrap">

        <div class="b-block-career-form-new__title">Получить отчет по продукту</div>
      </div>
      <form action="http://127.0.0.1:3000"
        class="b-block-career-form__form b-career-form form js-b-form__form js-form-validate">
        <input class="js-url-query" type="hidden" name="url_query">
        <div class="b-block-career-form__inputs-wrap js-b-form-inputs active">
          <div class="b-career-form__row">
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Имя и Фамилия<span class="required">*</span></span>
              <input type="text" name="name" id="" class="b-career-form__field__input js-b-input__field"
                data-max-length="60" data-cyrLat-name data-required>
              <span class="alert-input-text"></span>
            </label>
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Компания<span class="required">*</span></span>
              <input type="text" name="company" id="" class="b-career-form__field__input js-b-input__field" data-required>
              <span class="alert-input-text"></span>
            </label>
          </div>

          <div class="b-career-form__row">
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Должность<span class="required">*</span></span>
              <input type="text" name="position" id="" class="b-career-form__field__input js-b-input__field" data-required>
              <span class="alert-input-text"></span>
            </label>
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Телефон<span class="required">*</span></span>
              <input type="tel" name="tel" id="" class="b-career-form__field__input js-b-input__field js-phone-mask"
                data-required>
              <span class="alert-input-text"></span>
            </label>
          </div>
          
          <div class="b-career-form__row">
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Email<span class="required">*</span></span>
              <input type="email" name="email" id="" class="b-career-form__field__input js-b-input__field" data-required data-email>
              <span class="alert-input-text"></span>
            </label>
          </div>
          
          <div class="b-career-form__row">
            {{#with this.store.intraTag}}
            {{> components/tags-select required=true }}
            {{/with}}
          </div>

          <div class="b-career-form__row tags-select__other js-direction-other">
            <label class="b-career-form__field js-b-input">
              <span class="b-career-form__field__label">Напиши свой вариант</span>
              <input type="text" name="product-other" id="" class="b-career-form__field__input js-b-input__field">
              <span class="alert-input-text"></span>
            </label>
          </div>

          <label class="b-career-form__checkbox">
            <input type="checkbox" name="tel" id="" class="b-career-form__checkbox__input js-b-input__field"
              data-required>
            <span class="b-career-form__checkbox__holder"></span>
            <span class="b-career-form__checkbox__label">Даю согласие на <a
                href="https://t1.ru/documents/personal_data_politics/" target="_blank"
                class="b-career-form__checkbox__link">обработку персональных данных</a></span>
            <span class="alert-input-text"></span>
          </label>
          <label class="b-career-form__checkbox">
            <input type="checkbox" name="tel" id="" class="b-career-form__checkbox__input">
            <span class="b-career-form__checkbox__holder"></span>
            <span class="b-career-form__checkbox__label">Я согласен на <a
                href="https://t1.ru/documents/SOPD_personal_data_ad.pdf" target="_blank"
                class="b-career-form__checkbox__link">получение рекламы</a></span>
            <span class="alert-input-text"></span>
          </label>

          <button type="submit" class="b-career-form__btn btn-white js-b-form-submit">Отправить</button>
          <div class="b-career-form__btn btn-white js-b-test-submit">Test</div>

        </div>
        <div class="b-block-career-form__response-success js-b-form-success">
          {{{getImg src="form/success-img.png"}}}
          <span class="b-block-career-form__response-msg">Спасибо!</span>
        </div>
        <div class="b-block-career-form__response-error js-b-form-error">
          {{{getImg src="form/back.png"}}}
          <span class="b-block-career-form__response-msg">Не удалось отправить форму.</span>
          <div class="b-block-career-form__back js-b-form-back">Попробовать еще раз</div>
        </div>
        <div class="b-block-career-form__loader js-b-form-loader">
          {{{getImg src="form/loader.png"}}}
        </div>
      </form>
    </div>
  </div>
{{/layouts/main}}